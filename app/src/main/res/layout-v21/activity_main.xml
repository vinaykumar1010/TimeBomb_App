<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/raychan_e_unsplash"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/et_input_min"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="320dp"
            android:hint="Minute"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#1589FF" />

        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:elevation="8dp"
            android:fitsSystemWindows="true"
            android:translationX="1dp"
            android:translationY="20dp"
            android:translationZ="20dp"
            app:cardBackgroundColor="#FFFFFF "
            app:cardCornerRadius="180dp"
            app:cardElevation="40dp">

            <TextView
                android:id="@+id/tv_Countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:inputType="number"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="#1589FF"
                android:textSize="80dp" />


        </androidx.cardview.widget.CardView>


        <VideoView
            android:id="@+id/virtual_view"
            android:layout_width="283dp"
            android:layout_height="246dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bt_start"
            android:layout_marginTop="24dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bt_start"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/et_input_min"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/ic_play_circle_outline"
            android:elevation="10dp"
            android:padding="10dp"
            android:clickable="true"
            android:textColor="@color/white"
            android:translationZ="10dp"
            app:backgroundTint="#1589FF"
            tools:ignore="VectorDrawableCompat" />

        <Button

            android:id="@+id/bt_reset"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="219dp"
            android:layout_marginRight="219dp"
            android:layout_toEndOf="@+id/bt_start"
            android:layout_toRightOf="@+id/bt_start"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Reset"
            android:clickable="true"
            android:background="@drawable/background_button"
            android:textColor="@color/white"
            android:translationZ="10dp"
            app:backgroundTint="#1589FF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="DuplicateIds" />

    </RelativeLayout>


</LinearLayout>