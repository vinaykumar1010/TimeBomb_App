<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/et_input_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:hint="Hour"
            android:inputType="number"
            android:maxLength="4"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_input_min"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="340dp"
            android:layout_toEndOf="@+id/et_input_hour"
            android:layout_toRightOf="@+id/et_input_hour"
            android:hint="Minute" />


        <Button
            android:id="@+id/bt_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="340dp"
            android:layout_marginRight="63dp"
            android:layout_toEndOf="@+id/et_input_min"
            android:layout_toRightOf="@+id/et_input_min"
            android:background="@drawable/button_layout"
            android:elevation="10dp"
            android:text="Set"
            android:textColor="@color/white"
            android:translationZ="10dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="45dp"
            android:elevation="40dp"
            android:layout_weight="1"
            android:fitsSystemWindows="true"
            android:translationX="1dp"
            android:translationY="20dp"
            android:translationZ="20dp"
            app:cardBackgroundColor="#02307E"
            app:cardCornerRadius="180dp"
            app:cardElevation="40dp">

            <TextView
                android:id="@+id/tv_Countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="0:00:00"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textSize="20dp"/>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/bt_start"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/button_layout"
            android:elevation="10dp"
            android:text="Start"
            android:textColor="@color/white"
            android:translationZ="10dp"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bt_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="219dp"
            android:layout_marginRight="219dp"
            android:layout_toEndOf="@+id/bt_start"
            android:layout_toRightOf="@+id/bt_start"
            android:background="@drawable/button_layout"
            android:elevation="10dp"
            android:text="Reset"
            android:textColor="@color/white"
            android:translationZ="10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent" />

        <VideoView
            android:id="@+id/virtual_view"
            android:layout_width="283dp"
            android:layout_height="246dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>